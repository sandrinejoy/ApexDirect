<body>
    

    <script type="text/javascript" src="https://form.jotform.com/jsform/193548313825160"></script>

    <footer>

        <div id="triangles">
        
            <div id="leftTriangle"></div>
            <div id="rightTriangle"></div>
        
        </div>
    
    
    
        <div id="topFooterSection">
            <div id="locationInfo">
                <h2>Location</h2>
                <p id="locationInfo">Lousville, KY</p>
            </div>
    
            <div id="socialMediaContainer">
                <h2>Check Us Out</h2>
                <div id="socialMedia">
                    <a target="_blank" href="#"><img class="socialMedia" id="facebook"
                            src="/images/facebook.png" alt="FB"></a>
    
                    <a target="_blank" href="https://twitter.com/apexelitedirect"><img
                            class="socialMedia" src="/images/twitter.png" alt="Twitter"></a>
    
                    <a target="_blank" href="https://linkedin.com/in/dana-davis-680200b"><img
