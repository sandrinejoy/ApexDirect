    <!-- DESKTOP NAVIGATION MENU -->

    <div class="spacer container">

        <div id="header" class="stickyHeader slide-in-top">
            <img id="logo" src="/images/apexLogo.png" alt="LOGO">
            <ul id="links">
                <a class="headerLink" href="/">
                    <li class="headerLink">Home</li>
